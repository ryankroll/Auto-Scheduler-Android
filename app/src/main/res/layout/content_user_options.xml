<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rkroll.auto_scheduler.UserOptions"
    tools:showIn="@layout/activity_user_options">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:textSize="@dimen/largeText"
                android:textAlignment="center"
                android:textStyle="bold"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/userAvail"
                    android:textSize="@dimen/mediumText"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/fab_margin"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/smallTopSpace"
                    android:text="@string/sundayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sundayStartTime"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sundayEndTime"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/mondayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/mondayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:id="@+id/mondayEndTime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/tuesdayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/tuesdayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:id="@+id/tuesdayEndTime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/wednesdayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/wednesdayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:id="@+id/wednesdayEndTime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/thursdayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/thursdayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:id="@+id/thursdayEndTime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/fridayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/fridayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:id="@+id/fridayEndTime"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/saturdayHrsText"
                    android:textSize="@dimen/normalText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="@dimen/smallTopSpace"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    android:id="@+id/saturdayStartTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/dash"
                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="9dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="@dimen/normalText"
                    android:layout_gravity="bottom"
                    android:id="@+id/saturdayEndTime"/>


            </LinearLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editPersonalAvail"
                android:id="@+id/editHrsButton"
                android:layout_gravity="end"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/topSpace"
                android:onClick="changeAvailHrs"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/topSpace"
                    android:text="@string/userInfo"
                    android:textSize="@dimen/mediumText"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"
                    />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TableRow
                    android:layout_marginTop="@dimen/fab_margin"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empNameLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/employeeName"
                        android:text="full name"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empEmailLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/emp"
                        android:text="bj@lougle.com"
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="@dimen/largeTopSpace"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empNumberLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/employeeNumber"
                        android:text="989"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empBithdayLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/empBirthday"
                        android:text=""
                        />
                </TableRow>

                <TableRow
                    android:layout_marginTop="@dimen/largeTopSpace"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empHireDateLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/empHireDate"
                        android:text=""
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"

                        android:text="@string/empPosStatusLabel"
                        android:textSize="@dimen/normalText"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/normalText"

                        android:id="@+id/empPosStatus"
                        android:text="Full-Time"
                        />
                </TableRow>
            </TableLayout>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editPersonalInfo"
                android:id="@+id/editStoreButton"
                android:layout_gravity="end"
                android:textSize="12sp"
                android:onClick="editInfo"
                />
        </LinearLayout>


    </ScrollView>
</LinearLayout>
