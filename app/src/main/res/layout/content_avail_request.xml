<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rkroll.auto_scheduler.AvailRequest"
    tools:showIn="@layout/activity_avail_request"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"

        android:text="@string/promoteDeleteTitle"
        android:textStyle="bold"
        android:textSize="@dimen/medLargText"
        android:id="@+id/userReq"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:text="@string/currentAvailUser"
        android:textStyle="bold"
        android:textSize="@dimen/medLargText"
        />

    <HorizontalScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/largeTopSpace"
        android:paddingTop="@dimen/fab_margin">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mediumText">


            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abSunday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abMonday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abTuesday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abWednesday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abThursday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abFriday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abSaturday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="@dimen/fab_margin">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="SunTime"
                    android:id="@+id/sundayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="MonTime"
                    android:id="@+id/mondayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="TuesTime"
                    android:id="@+id/tuesdayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="WedTime"
                    android:id="@+id/wednesdayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="ThursTime"
                    android:id="@+id/thursdayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="FriTime"
                    android:id="@+id/fridayReqTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="SatTime"
                    android:id="@+id/saturdayReqTime"
                    />
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"

        android:text="@string/reqAvailUser"
        android:textStyle="bold"
        android:textSize="@dimen/medLargText"
        />

    <HorizontalScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/largeTopSpace"
        android:paddingTop="@dimen/fab_margin">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/mediumText">


            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abSunday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abMonday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abTuesday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abWednesday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abThursday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abFriday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
                <TextView
                    android:layout_width="@dimen/tableSize"
                    android:layout_height="wrap_content"

                    android:text="@string/abSaturday"
                    android:layout_marginEnd="@dimen/fab_margin"/>
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingBottom="@dimen/fab_margin">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="SunTime"
                    android:id="@+id/sundayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="MonTime"
                    android:id="@+id/mondayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="TuesTime"
                    android:id="@+id/tuesdayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="WedTime"
                    android:id="@+id/wednesdayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="ThursTime"
                    android:id="@+id/thursdayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="FriTime"
                    android:id="@+id/fridayTime"
                    />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"

                    android:text="SatTime"
                    android:id="@+id/saturdayTime"
                    />
            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/deny"
            android:id="@+id/denyChange"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/accept"
            android:id="@+id/acceptChange"
            android:layout_gravity="end"/>

    </LinearLayout>
</LinearLayout>
